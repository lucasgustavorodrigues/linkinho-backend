{
	"name": "linkinho-backend",
	"version": "1.0.0",
	"description": "Modern and intuitive URL shortener built with AWS Lambda and Serverless Framework.",
	"main": "index.js",
	"scripts": {
		"dev": "NODE_ENV=development sls offline start --reloadHandler",
		"local:start": "docker-compose up -d",
		"local:stop": "docker-compose down",
		"local:setup": "./scripts/setup-dynamodb.sh",
		"local:dev": "npm run local:start && sleep 5 && npm run local:setup && npm run dev",
		"deploy": "dotenv -- sls deploy",
		"deploy:prod": "dotenv -- sls deploy --stage prod",
		"test": "vitest src/",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest src/ --coverage"
	},
	"keywords": [
		"shortener",
		"url",
		"link",
		"short"
	],
	"author": "Lucas Gustavo Rodrigues",
	"license": "ISC",
	"packageManager": "pnpm@10.15.1",
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/aws-lambda": "^8.10.152",
		"@types/node": "^24.3.1",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "^3.2.4",
		"dotenv-cli": "^10.0.0",
		"serverless-offline": "^14.4.0",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.888.0",
		"@aws-sdk/lib-dynamodb": "^3.888.0",
		"zod": "^4.1.5"
	}
}